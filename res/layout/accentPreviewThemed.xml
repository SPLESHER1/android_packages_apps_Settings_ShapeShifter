<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/accent_preview_background"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="199dp"
        android:layout_height="396dp"
        android:layout_margin="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shapeshift_custom_accent_color_preview_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_marginTop="78dp"
                android:layout_marginBottom="41dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp">
                </Space>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_ssos_preview"
                    android:layout_height="match_parent">
                </ImageView>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent">
                </Switch>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:layout_height="match_parent"
                    android:checked="true">
                </RadioButton>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:layout_height="match_parent">
                </CheckBox>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                </Space>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:progress="69"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent">
                </SeekBar>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21dp">
                </Space>

                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/accent_preview_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themes_preview_button_text"
                        android:layout_gravity="center"
                        android:textSize="12dp">
                    </TextView>

                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
